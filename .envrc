# Environment configuration for Haskell service template
# Use with direnv: https://direnv.net/
# Or source manually: source .envrc

# PKG_CONFIG_PATH for finding library metadata
export PKG_CONFIG_PATH="/opt/homebrew/opt/librdkafka/lib/pkgconfig:/opt/homebrew/lib/pkgconfig:${PKG_CONFIG_PATH:-}"

# LIBRARY_PATH and CPATH for C library linking
export LIBRARY_PATH="/opt/homebrew/opt/librdkafka/lib:/opt/homebrew/opt/postgresql@17/lib:${LIBRARY_PATH:-}"
export CPATH="/opt/homebrew/opt/librdkafka/include:/opt/homebrew/opt/postgresql@17/include:${CPATH:-}"
