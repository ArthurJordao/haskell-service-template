PORT=8081
ENVIRONMENT=development

KAFKA_BROKER=localhost:9092
KAFKA_GROUP_ID=auth-service
KAFKA_DEAD_LETTER_TOPIC=DEADLETTER
KAFKA_MAX_RETRIES=3

DB_TYPE=sqlite
DB_CONNECTION_STRING=auth-service.db
DB_POOL_SIZE=10
