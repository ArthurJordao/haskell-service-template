JWT_PRIVATE_KEY=<ec-p256-private-jwk-json>
JWT_ACCESS_TOKEN_EXPIRY_SECONDS=900
JWT_REFRESH_TOKEN_EXPIRY_DAYS=7
ADMIN_EMAILS=admin@example.com
CORS_ALLOWED_ORIGINS=http://localhost:5173
